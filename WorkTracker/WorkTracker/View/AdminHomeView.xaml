<UserControl x:Class="WorkTracker.View.AdminHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             xmlns:local="clr-namespace:WorkTracker.View"
             xmlns:components="clr-namespace:WorkTracker.Components"
             mc:Ignorable="d"
             xmlns:utils="clr-namespace:WorkTracker.Utils"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <BitmapImage x:Key="DefaultImage"
                     UriSource="/Resources/user-avatar.png" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="60*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="05">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Content="{Binding LabelTitle}"
                       FontWeight="Bold"
                       FontSize="25" Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                <Label Content="{Binding UserNameSurname}"
                       FontWeight="Bold"
                       FontSize="25" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Label Content="{Binding UserStore.User.Username}"
                       FontWeight="Medium"
                       FontSize="15" VerticalAlignment="Center"
                       Foreground="{DynamicResource SecondaryHueMidBrush}" />
                <Image Name="UserImage"
                       Width="40"
                       Height="40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <Image.Source>
                        <Binding Path="UserStore.User.Image">
                            <Binding.Converter>
                                <utils:ImageBytesToBitmapConverter DefaultImage="{StaticResource DefaultImage}" />
                            </Binding.Converter>
                        </Binding>
                    </Image.Source>
                    <Image.Clip>
                        <EllipseGeometry RadiusX="20"
                                         RadiusY="20"
                                         Center="20,20" />
                    </Image.Clip>
                </Image>
            </StackPanel>
            
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <materialDesign:Card Margin="10"
                                 materialDesign:ElevationAssist.Elevation="Dp3"
                                 Padding="8"
                                 Background="{DynamicResource MaterialDesignCardBackground}"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />

                    </Grid.RowDefinitions>
                    <TextBlock Text="{DynamicResource NumberOfWorkers}"
                               
                               Foreground="{DynamicResource SecondaryHueMidBrush}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" />
                    <TextBlock Text="{Binding NumberOfWorkers}"
                               Grid.Row="1"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"
                               FontSize="40"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="2"
                                HorizontalAlignment="Center">
                        <Label Content="{DynamicResource NumberOfDeactivatedAccounts}"
                               Foreground="{DynamicResource SecondaryHueMidBrush}"
                               VerticalAlignment="Center"
                                />
                        <Label Content="{Binding NumberOfDeactivatedWorkers}"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"
                                />
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Margin="10" Grid.Column="1"
                                 materialDesign:ElevationAssist.Elevation="Dp3"
                                 Padding="8"
                                 Background="{DynamicResource MaterialDesignCardBackground}"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />

                    </Grid.RowDefinitions>
                    <TextBlock Text="{DynamicResource NumberOfManagers}"
                               Foreground="{DynamicResource SecondaryHueMidBrush}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" />
                    <TextBlock Text="{Binding NumberOfManagers}"
                               Grid.Row="1"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"
                               FontSize="40"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="2"
                                HorizontalAlignment="Center">
                        <Label Content="{DynamicResource NumberOfDeactivatedAccounts}"
                               Foreground="{DynamicResource SecondaryHueMidBrush}"
                               VerticalAlignment="Center"
                                />
                        <Label Content="{Binding NumberOfDeactivatedManagers}"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"
                                />
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Margin="10"
                                 Grid.Column="3"
                                 materialDesign:ElevationAssist.Elevation="Dp3"
                                 Padding="8"
                                 Background="{DynamicResource MaterialDesignCardBackground}"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="{DynamicResource NumberOfSectors}"
                               Foreground="{DynamicResource SecondaryHueMidBrush}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" />
                    <TextBlock Text="{Binding NumberOfSectors}"
                               Grid.Row="1"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"
                               FontSize="40"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                </Grid>
            </materialDesign:Card>
        </Grid>
        <materialDesign:Card Margin="10"
                             Grid.Row="2"
                             materialDesign:ElevationAssist.Elevation="Dp3"
                             Padding="8"
                             Background="{DynamicResource MaterialDesignCardBackground}"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             UniformCornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="{DynamicResource NumberOfSectors}"
                           Foreground="{DynamicResource SecondaryHueMidBrush}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap" />
                
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
